%h2 Sign Up

= semantic_form_for resource, :url => registration_path(resource_name) do |form|
  = devise_error_messages!
  %h4 Account information
  = form.input :email, :label => "Email:", :required => false
  = form.input :password, :label => "Password:", :required => false
  = form.input :password_confirmation, :label => "Password confirmation:"
  %h4 Mailing Address
  = form.input :name, :label => "Name:", :required => false
  = form.input :address1, :label => "Address (line 1):", :required => false
  = form.input :address2, :label => "Address (line 2):"
  = form.input :city, :label => "City:", :required => false
  = form.input :state, :as => :select, :collection => User::STATES, :label => "State:", :required => false, :selected => "CA"
  = form.input :zipcode, :label => "Zipcode:", :required => false


  = form.commit_button :label => "Continue to Paypal Checkout"

= render :partial => 'shared/paypal_button'

= render :partial => 'devise/shared/links'
