!!!
%html
%head
  %title Noticketforme
  = stylesheet_link_tag :all
  =# controller_stylesheet_link
  = javascript_include_tag 'jquery-1.4.4.min', 'application'
  = controller_javascript_include_tag
  = csrf_meta_tag
%body
.container_12.header
  .logo
    = link_to image_tag('weblogo.png'), root_path
  .login
    = semantic_form_for :user do |form|
      = form.input :email, :required => false, :label => "email: "
      = form.input :password, :required => false, :label => "password:"
  .signup_link
    = link_to "CLICK HERE TO SIGN UP!", new_user_registration_path
  .clearboth
  %table.tabs{:cellspacing => 0,:cellpadding => 0,:align => 'center'}
    %tr
      %td.nav_tab=link_to "Why Join?", root_path + "#why_join"
      %td.nav_tab=link_to "Report a Save", root_path
      %td.nav_tab=link_to "Know the Laws", root_path
      %td.nav_tab=link_to "Contests", welcome_contests_path
      %td.nav_tab=link_to "Our Ten Commandments", welcome_ten_commandments_path 
      %td.nav_tab=link_to "Contact Us", root_path
= yield
.footer
  .container_12
    %table.tabs{:cellspacing => 0,:cellpadding => 0,:align => 'center'}
      %tr
        %td.footer_tab=link_to "ABOUT US", root_path
        %td.footer_tab=link_to "REPORT A SAVE", root_path
        %td.footer_tab=link_to "LEARN THE LAWS", root_path
        %td.footer_tab=link_to "MONTHLY CONTESTS", welcome_contests_path
        %td.footer_tab=link_to "ADDITIONAL INFO", root_path
        %td.footer_tab=link_to "CONTACT US", root_path
